{
  "name": "@shiv/vimjs",
  "version": "1.0.0",
  "description": "A Vim-inspired terminal-based text editor with AI-powered code generation and syntax highlighting",
  "main": "src/index.js",
  "bin": {
    "vimjs": "./bin/vimjs.js"
  },
  "scripts": {
    "test": "node test/test-syntax.js",
    "test:all": "npm run test && node test-ai-integration.js && node test-sanitization-fix.js",
    "test:ai": "node test-ai-integration.js",
    "test:sanitization": "node test-sanitization-fix.js",
    "test:generation": "node test-code-generation.js",
    "test:package": "node test-package.js",
    "start": "node bin/vimjs.js",
    "setup-ai": "node setup-ai.js",
    "prepublishOnly": "npm run test:package",
    "postinstall": "echo 'Run `vimjs setup-ai` to configure AI features (optional)'"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE",
    ".env.example",
    "setup-ai.js"
  ],
  "keywords": [
    "vim",
    "text-editor",
    "terminal",
    "cli",
    "editor",
    "ai",
    "code-generation",
    "syntax-highlighting",
    "llm",
    "groq",
    "programming"
  ],
  "author": "VimJS Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShivamAher30/VimJs"
  },
  "homepage": "https://github.com/ShivamAher30/VimJs",
  "bugs": {
    "url": "https://github.com/ShivamAher30/VimJs/bugs"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "cardinal": "^2.1.1",
    "chalk": "^4.1.2",
    "chalk-animation": "^2.0.3",
    "dotenv": "^16.4.5",
    "figlet": "^1.8.1",
    "fs-extra": "^11.1.1",
    "gradient-string": "^3.0.0",
    "highlight.js": "^11.11.1",
    "nanospinner": "^1.2.2",
    "node-fetch": "^2.7.0",
    "ora": "^8.2.0",
    "yargs": "^17.7.2"
  }
}
